<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.student.myproject.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf1" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf2" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf3" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf4" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf5" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf6" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf7" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/hit8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bf8" />
                <Button
                    android:onClick="getComboCount"
                    android:id="@+id/removeHit8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/remove"
                    android:layout_gravity="right|top"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/tv_combo_context"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/quantity_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text=""
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/tv_combo_price"
                        android:textAllCaps="true"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/price_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_combo_init_price"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="getComboCount"
                    android:text="@string/bag_xml" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:onClick="getComboCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/inside" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:onClick="getComboCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside" />
                </RadioGroup>

                <Button
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_red_light"
                    android:onClick="submit"
                    android:text="@string/order"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_red_light"
                    android:onClick="cancel"
                    android:text="@string/cancel"
                    android:textSize="20sp"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>